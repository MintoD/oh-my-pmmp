{
    "name": "thebigcrafter/oh-my-pmmp",
    "description": "A plugin manager for PocketMine-MP downloads plugin from PocketMine-MP official plugin repository",
    "type": "project",
    "require": {
        "php": "^8.1",
        "pocketmine/pocketmine-mp": "^5.0",
        "thebigcrafter/commando": "^3.2",
        "thebigcrafter/hydrogen": "^1.0",
        "thebigcrafter/promise": "^2.10"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.17",
        "phpstan/phpstan": "^1.4"
    },
    "license": "GPL-3.0-only",
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "src"
        ]
    },
    "authors": [
        {
            "name": "thebigcrafter"
        }
    ],
    "scripts": {
        "analyse": "./vendor/bin/phpstan analyse -c phpstan.neon.dist",
        "fix-cs": "./vendor/bin/php-cs-fixer fix"
    }
}
